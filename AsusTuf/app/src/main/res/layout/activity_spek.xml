        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:text="- 8 GB DDR4 RAM"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:text="- 1 TB HDD"
            android:layout_height="wrap_content" />
