            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:text="- Windows 10 Home"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:text="- 15.6' Full-HD display ( 1920 x 1080 ), SLIM-BEZEL"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:text="- Dual-Fan Anti-dust cooling system"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:text="- Backlight Keyboard"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:text="- GOLD STEEL"
