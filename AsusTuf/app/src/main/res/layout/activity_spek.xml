            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:text="- AMD Ryzen-5 R5-3550H ( 2.1 Ghz - 3.7 GHz, 4MB L3 Cache )"
